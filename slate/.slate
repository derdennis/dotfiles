# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000
config keyboardLayout qwerty
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsDuration 5
config windowHintsSpread true
#config windowHintsOrder persist

# Show homerow hints
alias showNormalHint hint ASDFGHJKLQWERTZUIOPYXCVBNM

# Locations aliases
alias full          move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias center        move screenOriginX+screenSizeX/2-windowSizeX/2;screenOriginY+screenSizeY/2-windowSizeY/2 windowSizeX;windowSizeY
alias lefthalf      move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias left30        move screenOriginX;screenOriginY screenSizeX*30/100;screenSizeY
alias left70        move screenOriginX;screenOriginY screenSizeX*70/100;screenSizeY
alias righthalf     move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias right30       move screenOriginX+screenSizeX*70/100;screenOriginY screenSizeX*30/100;screenSizeY
alias right70       move screenOriginX+screenSizeX*30/100;screenOriginY screenSizeX*70/100;screenSizeY
alias tophalf       push top bar-resize:screenSizeY/2
alias bottomhalf    push bottom bar-resize:screenSizeY/2
alias topleft       corner top-left resize:screenSizeX/2;screenSizeY/2
alias topleft30     corner top-left resize:screenSizeX*30/100;screenSizeY/2
alias topleft70     corner top-left resize:screenSizeX*70/100;screenSizeY/2
alias topright      corner top-right resize:screenSizeX/2;screenSizeY/2
alias topright30    corner top-right resize:screenSizeX*30/100;screenSizeY/2
alias topright70    corner top-right resize:screenSizeX*70/100;screenSizeY/2
alias bottomleft    corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomleft30  corner bottom-left resize:screenSizeX*30/100;screenSizeY/2
alias bottomleft70  corner bottom-left resize:screenSizeX*70/100;screenSizeY/2
alias bottomright   corner bottom-right resize:screenSizeX/2;screenSizeY/2
alias bottomright30 corner bottom-right resize:screenSizeX*30/100;screenSizeY/2
alias bottomright70 corner bottom-right resize:screenSizeX*70/100;screenSizeY/2

# The HYPER key
alias hyper ctrl;shift;alt;cmd

# Show window hints
bind space:${hyper}  ${showNormalHint}

# Location bindings
bind f:${hyper}     ${full}
bind c:${hyper}     ${center} 
bind left:${hyper}  chain ${lefthalf} | ${left30} | ${left70}
bind right:${hyper} chain ${righthalf} | ${right30} | ${right70}
bind up:${hyper}    ${tophalf}
bind down:${hyper}  ${bottomhalf}
bind j:${hyper}     chain ${topleft} | ${topleft30} | ${topleft70}
bind k:${hyper}     chain ${topright} | ${topright30} | ${topright70}
bind h:${hyper}     chain ${bottomleft} | ${bottomleft30} | ${bottomleft70}
bind l:${hyper}     chain ${bottomright} | ${bottomright30} | ${bottomright70}

# App bindings
bind s:${hyper} focus 'Safari'
bind g:${hyper} focus 'Google Chrome'
bind v:${hyper} focus 'MacVim'
bind m:${hyper} focus 'Mail'
bind i:${hyper} focus 'iTerm'
